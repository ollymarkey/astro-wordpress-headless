---
interface Props {
	date: string | Date;
}

const { date } = Astro.props;

// Convert string date to Date object if needed
const dateObj = date instanceof Date ? date : new Date(date);
---

<time datetime={dateObj.toISOString()}>
	{
		dateObj.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
